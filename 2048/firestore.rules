rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // REGLAS BÁSICAS DE SEGURIDAD PARA PRODUCCIÓN
    // Este proyecto usa Supabase como base de datos principal
    // Estas reglas son para mantener Firestore seguro si está habilitado
    
    // Bloquear todo acceso por defecto
    // Solo permitir operaciones autenticadas específicas
    match /{document=**} {
      // Denegar todo acceso no autenticado
      allow read, write: if false;
    }
    
